extends ../../layout/index.pug
block main
  - if (messages.update)
    .message.update
      .alert.alert-success(
    show-alert
    data-time = "5000") #{messages.update}
  .card 
    .card-body  
      .card-title THÊM MỚI SẢN PHẨM
      form(
        action=``
        id='createUserForm'
        method= 'POST'
        enctype="multipart/form-data"
        )
        div(class="form-group")
          label(for='title') Tiêu đề
          input(type='text', id='title', class="form-control", name='tittle', required)
        div(class="form-group")
          label(for='desc') Mô tả
          input(type='text', id='desc', class="form-control", name = 'description' required)
        div(class="form-group")
          label(for='price') Giá
          input(type='text', id='price', class="form-control", name='price')
        div(class="form-group")
          label(for='discount') Giảm giá
          input(type='text', id='title', class="form-control", name='discountPercentage' required)
        div(class="form-group") 
          label(for='stock') Số lượng
          input(type='text', id='stock', class="form-control", name='stock' required)
        div(class="form-group") 
          label(for='thumbnail') Ảnh
          input(type='file', id='thumbnail', class="form-control-file", name='thumbnail', accept='image/*', required)
        div(class="form-group")
          input(class="form-check-input" type="radio" name="status" id="active" value="active" required)
          label(class="form-check-label mr-5" for="active") Hoạt động
          input(class="form-check-input" type="radio" name="status" id="inactive" value="inactive" required)
          label(class="form-check-label" for="inactive") Dừng hoạt động
        div(class="form-group") 
          button(class='btn btn-outline-success mt-3' type='submit') Tạo sản phẩm

